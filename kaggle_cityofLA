library(wordVectors)
corpus <- Corpus(VectorSource(df$Str))

corpus <- processCorpus(corpus)
#corpus$content[1]


write.table(corpus$content, "corp.txt", sep="\t")
prep_word2vec(origin = "corp.txt", destination = "corp2.txt", lowercase = F, bundle_ngrams = 3, force = T)
#x <- readLines("corp2.txt")
model = train_word2vec("corp2.txt", "corp_vectors.bin", vectors = 200, threads = 4, window = 12, iter = 5, negative_samples = 0, force = T)
#rm(corpus); gc()
#model = read.vectors("corp_vectors.bin")
#-------------------------------------------
#dimnames(model)[[1]] <- gsub("dash", "-", dimnames(model)[[1]])
vocab <- dimnames(model)[[1]]
head(vocab)
vocab[1:150]

#vocab[grep("mascu", vocab)]
#model[["king"]] - model[[c("man","men")]] + model[[c("woman","women")]]
cosineSimilarity(model[[c("man", "men", "male", "exclud", "domin"), average = F]], model[[c("woman","women","femal", "feminin", "includ", "communal"), average = F]])
cosineSimilarity(model[[c("caucasian", "white"), average = F]], model[[c("black", "ethnic"), average = F]])
model %>% closest_to("ethnic")



gender_score <- c()
caucas_score <- c()
i <- 256
for(i in 1:nrow(df)){
  print(i)
  this_vocab <- unlist(str_split(corpus$content[i], " "))
  feminin_aligned <- c()
  masculin_aligned <- c()
  caucas_aligned <- c()
  for(j in 1:length(this_vocab)){
    this_word <- this_vocab[j]
    feminin_aligned[j] <- cosineSimilarity(model[[this_word]], model[[c("feminin", "femal", "communal", "includ")]])
    masculin_aligned[j] <- cosineSimilarity(model[[this_word]], model[[c("men", "man", "male", "exclud", "domin")]])
    caucas_aligned[j] <- cosineSimilarity(model[[this_word]], model[[c("white", "caucasian")]])

  }
  ind_nan <- which(is.nan(feminin_aligned))
  if(length(ind_nan) != 0){
    g_aligned <- feminin_aligned[-ind_nan] - masculin_aligned[-ind_nan]
    caucas_aligned <- caucas_aligned[-ind_nan]
  }else{
    g_aligned <- feminin_aligned - masculin_aligned
  }
  g_score <- mean(g_aligned)
  cauc_score <- mean(caucas_aligned)
  print(g_score)
  print(cauc_score)
  gender_score[i] <- g_score
  caucas_score[i] <- cauc_score
}

hist(caucas_score)
hist(gender_score)
file_names[256]
corpus$content[256]
q <- quantile(gender_score, probs = 0.95)
ind_top <- which(gender_score > as.numeric(q))
file_names[ind_top]
q <- quantile(-gender_score, probs = 0.95)
ind_bottom <- which(-gender_score > as.numeric(q))
file_names[ind_bottom]

mean(df$mean_entry_salaries_all_GEN[ind_top])
mean(df$mean_entry_salaries_all_GEN[ind_bottom])

